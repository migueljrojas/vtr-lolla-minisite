        .vtr-shuffle__index
            ul.vtr-shuffle__index-genre-list
                li.vtr-shuffle__index-genre.-active
                    span Inicio
                li.vtr-shuffle__index-genre
                    span Electronica
                li.vtr-shuffle__index-genre
                    span Hip Hop
                li.vtr-shuffle__index-genre
                    span Folk
                li.vtr-shuffle__index-genre
                    span Indie
                li.vtr-shuffle__index-genre
                    span Pop
                li.vtr-shuffle__index-genre
                    span Rock
            .vtr-shuffle__index-controls
                button._prev
                    i.material-icons keyboard_arrow_up
                ._index
                    span 1 
                    | / 7
                button._next
                    i.material-icons keyboard_arrow_down

    .vtr-shuffle__modal
        .vtr-shuffle__modal__backdrop(data-modal="close")
        .vtr-shuffle__modal__container
            button.vtr-shuffle__modal__close(data-modal="close")
                span
                span
            .vtr-shuffle__modal__video
                iframe(src="")

    